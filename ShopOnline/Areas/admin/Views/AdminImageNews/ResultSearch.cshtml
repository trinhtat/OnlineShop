@model IEnumerable<ShopOnline.Models.ImageNew>

@{
    ViewBag.Title = "Hình ảnh tin tức";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Hình ảnh tin tức</h2>

@foreach (var item in Model)
{
    @Html.DisplayFor(modelItem => item.News.Title)
    break;
}


<table class="table">
    <tr>
        <th>
            Tên ảnh
        </th>
        <th>
            UURL ảnh
        </th>
        <th>
            Ghi chú
        </th>
        <th>
            Tiêu đề
        </th>
        <th>Xử lý</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageName)
            </td>
            <td>
                <img src='..\@item.ImageURL' style="max-width:100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.News.Title)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ImageID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ImageID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ImageID })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Qauy lại", "Index", "AdminNews")
</div>