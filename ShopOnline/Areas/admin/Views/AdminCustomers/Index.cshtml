@model IEnumerable<ShopOnline.Models.Customer>

@{
    ViewBag.Title = "Khách hàng";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Khách hàng</h2>

<p>
    @Html.ActionLink("Thêm", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên khách hàng
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Ghi chú
        </th>
        <th>
            Tên tài khoản
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateBirth)
        </td>
        <td>
            @if (item.Gender == 1)
            {
                <p>Nam</p>
            }
            else
            {
                <p>Nữ</p>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account.AccountName)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.CustomerID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.CustomerID }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.CustomerID })
        </td>
    </tr>
}

</table>
