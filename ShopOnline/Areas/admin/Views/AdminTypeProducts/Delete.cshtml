@model ShopOnline.Models.TypeProduct

@{
    ViewBag.Title = "Loại sản phẩm";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Loại sản phẩm</h2>

<h3>Bạn có chắc muốn xóa loại sản phẩm này</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên loại Sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TypeProductName)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageURL)
        </dd>

        <dt>
            Ghi chú
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Note)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
