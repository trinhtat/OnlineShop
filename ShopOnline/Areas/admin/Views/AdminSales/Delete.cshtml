@model ShopOnline.Models.Sale

@{
    ViewBag.Title = "Khuyễn mãi";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Khuyễn mãi</h2>

<h3 class="text-danger">Bạn có chắc muôn xóa khuyễn mãi này</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Phần trăm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Discount) %
        </dd>

        <dt>
            Ngày bắt đầu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateStart)
        </dd>

        <dt>
            Ngày kết thúc
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateEnd)
        </dd>

        <dt>
            Ghi chú
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Note)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
